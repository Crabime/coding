<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.dao.UserDao">
    <select id="findAllUsers" parameterType="list" resultType="com.gooalgene.beans.User">
      SELECT
             id as "id",
             username as "name",
             description as "description"
      FROM user
    </select>

    <select id="findUserByName" parameterType="String" resultType="com.gooalgene.beans.User">
        SELECT
        id as "id",
        username as "name",
        description as "description"
        FROM user
        <where>
            <if test="_parameter!=null and _parameter!=''">
                username = #{name}
            </if>
        </where>

    </select>
</mapper>
